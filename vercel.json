{
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "handle": "filesystem" },
    { "src": "/", "headers": { "Cache-Control": "no-store" }, "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
