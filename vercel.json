{
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/sw.js", "headers": { "Cache-Control": "public, max-age=0, must-revalidate" }, "dest": "/sw.js" },
    { "handle": "filesystem" },
    { "src": "/index.html", "headers": { "Cache-Control": "public, max-age=0, must-revalidate" }, "dest": "/index.html" },
    { "src": "/(.*)", "headers": { "Cache-Control": "public, max-age=3600" }, "dest": "/$1" }
  ]
}
