{
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/**/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },
    { "src": "/sw.js", "headers": { "Cache-Control": "public, max-age=0, must-revalidate" }, "dest": "/sw.js" },
    { "handle": "filesystem" },
    
    /* SPA fallback: any non-file path rewrites to index.html */
    { "src": "^/(?!api/).*", "headers": { "Cache-Control": "public, max-age=0, must-revalidate" }, "dest": "/index.html" }
  ]
}
